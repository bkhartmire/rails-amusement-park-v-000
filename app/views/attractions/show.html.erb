<h1><%= @attraction.name %></h1>
<% if !current_user.admin %>
  <%= form_tag('/rides/new', method: 'post') do %>
    <input name='user_id' type='hidden' value="<%=current_user.id%>">
    <input name='attraction_id' type='hidden' value="<%=@attraction.id%>">
    <%= button_tag "Go on this ride" %>
  <% end %>
<% else %>
  <h3><%= link_to "Edit Attraction", edit_attraction_path(@attraction) %></h3>
<% end %>
