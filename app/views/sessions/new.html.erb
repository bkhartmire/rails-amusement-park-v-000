<h1>Sign In</h1>
<%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>

  <%= f.label :name, "Select your name" %><br>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :password, "Password:" %>
  <%= f.password_field :password %>
  <%= f.submit "Sign In" %>
<% end %>
